description = "XHTML and HTML5 pages typed with polymorphic variants"
version = "dev"
requires = "netstring"
archive(byte) = "tyxml.cma"
archive(native) = "tyxml.cmxa"

package "functor" (
  description = "XHTML and HTML5 pages typed with polymorphic variants (Functor version)"
    version = "(distributed with tyxml)"
  archive(byte) = "tyxml_f.cma"
  archive(native) = "tyxml_f.cmxa"
)

package "syntax" (
    description = "XHTML and HTML5 syntax extension"
    version = "(distributed with tyxml)"
    requires = "tyxml,tyxml.lexer"
    archive(syntax,preprocessor) = "tyxml_syntax.cma"
    archive(syntax,toploop) = "tyxml_syntax.cma"
)

package "lexer" (
    description = "Simple XML parser"
    requires = "camlp4"
    version = "(distributed with tyxml)"
    archive(byte) = "xmllexer.cmo"
    archive(native) = "xmllexer.cmx"
)

package "parser" (
    description = "Simple XML parser"
    requires = "camlp4.lib,tyxml.lexer"
    version = "(distributed with tyxml)"
    archive(byte) = "simplexmlparser.cmo"
    archive(native) = "simplexmlparser.cmx"
)

package "duce" (
